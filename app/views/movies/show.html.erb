<div class="bg-image"></div>
<h1 class ="title text-center">Coder Factory Movie Database</h1>

<%= link_to("Return to Movies Index", movies_url) %>
<h1 class ="text-center"><%= @movie.title %></h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= image_tag(@movie.poster, size: "250") %>
      <h3>Genres: </h3>
      <ul>
      <% @movie.genres.each do |genre| %>
        <li><%= link_to(genre.name, genre_url(genre)) %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-xs-12 col-md-6">
      <h3>Movie Stars: </h3>
      <ul>
      <% @movie.stars.each do |star| %>
        <li><%= link_to(star.name, star_url(star)) %></li>
        <% end %>
      </ul>
    </div>
  </div> <!-- end of row -->
</div> <!-- end of container -->
